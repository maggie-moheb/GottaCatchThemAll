import java.awt.Point;

public class MinimumSpanningTreeEdge {
	int weight;
	Point start;
	Point end;
	
	public MinimumSpanningTreeEdge(Point start, Point end) {
		this.start = start;
		this.end = end;
		this.weight = manheim(start, end);
	}
	
	public static int manheim(Point start, Point end) {
		return Math.abs(start.x - end.x) + Math.abs(end.x, end.y);
	}
}
